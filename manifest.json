{
  "manifest_version": 3,
  "name": "YouTube Endcard Toggle",
  "version": "1.0",
  "description": "Toggle YouTube endcards on/off",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": [
        "content.js",
        "toggle-endcards.js", 
        "popup-comments.js", 
        "snap-comments.js", 
        "snap-chapters.js",
        "snap-watch-next-bar.js"
      ]
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}
