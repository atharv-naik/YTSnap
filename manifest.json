{
  "manifest_version": 3,
  "name": "YouTube Endcard Toggle",
  "version": "1.0",
  "description": "Toggle YouTube endcards on/off",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["toggle-endcards.js", "popup-comments.js"],
      "matches": ["*://www.youtube.com/*"]
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}
